<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.cidafestas.activitys.MainActivity"
    android:layout_margin="0dp">



    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Nossa Equipe"
                android:textColor="@android:color/white"
                android:textSize="34sp"


                />

        </RelativeLayout>



        <!-- Row 1 -->

        <!-- Column 1 -->

        <!-- Column 2 -->


        <!-- Row 2 -->

        <!-- Column 1 -->

        <!-- Column 2 -->


        <!-- Row 2 -->

        <!-- Column 1 -->

        <!-- Column 2 -->

        <androidx.cardview.widget.CardView
            android:layout_height="241dp"
            android:layout_width="match_parent"
            android:id="@+id/sobre"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">



            <ImageView
                android:id="@+id/img_equipe"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/equipe" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/sobre"
                android:textSize="30sp"></TextView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textPolitica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="8dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorLinkText"
            android:text="Politica de privacidade"
            android:onClick="politica"/>


    </LinearLayout>

</LinearLayout>
